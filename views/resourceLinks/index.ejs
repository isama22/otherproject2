<%- include('../partials/header') %>
<h4 class=" black white-text">Add a Link!</h4>
<div class="row">
  <div id="users" class="col s12">
    <div class="card black">
      <div class="card-content white-text">
        <ul class="collection white black-text">
          <% posts.forEach(function(post) { %>
          <li class="collection-item  text-darken-2">
            <span class="title black-text"><%= post.text %></span>
            <!-- //make x button delete the post it's attatched to  -->
            <form action="/resourceLinks/<%= post._id %>?_method=DELETE" method="POST" class="secondary-content">
              <button type="submit" class="waves-effect waves-teal btn-flat red-text">x</button>
            </form>
            <a href="/resourceLinks/<%= post._id %>/edit">Edit</a>
            <% post.comments.forEach(function(comment) { %>
          <li class="collection-item blue-grey-text text-darken-2">
            <span class="title"><%= comment.text %></span>
          </li>
          <% }) %>
          <form action="/resourceLinks/<%= post._id %>/comment" method="POST" class="white black-text">
            <input type="text" name="text" class="black-text">
            <button class="waves-effect waves-teal btn-flat">Add comment</button>
          </form>
          </li>
          <% }) %>
        </ul>
        <div class="card-action">
          <form action="/resourceLinks" method="POST">
            <input type="text" name="text" class="black white-text">
            <button class="btn red white-text">Add post</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<%- include('../partials/footer') %>