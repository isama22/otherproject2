<%- include('../partials/header') %>
<div class="section"></div>
<div class="row">

  <div id="users" class="col s5">
    <% posts.forEach(function(post) { %>
    <div class="red lighten-3  collection-item">
      <span class="title white-text"><%= post.text %></span>
      <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" class="secondary-content">
        <button type="submit" class="waves-effect waves-teal btn-flat red-text">x</button>
        <a href="/posts/<%= post._id %>/edit"> <em>Edit</em></a>
      </form>
      <hr>
      <div class="section"></div>

      <% post.comments.forEach(function(comment) { %>
      <div class="collection-item white-text col s7 push-s1">
        <span class="red lighten-3 title"><%= comment.text %></span>
        
      </div>
      <br><hr><br>
      <% }) %>

      <form action="/posts/<%= post._id %>/comment" method="POST" class="red lighten-3 white-text">
        <input type="text" name="text" class="white black-text">
        <button class="waves-effect waves-teal btn-flat">Add comment</button>
      </form>
    </div>
    
    <div class="section"></div>
    <% }) %>


    <div class="card-action">
      <form action="/posts" method="POST">
        <input type="text" name="text" class="white black-text">
        <button class="btn red white-text">Add post</button>
      </form>
    </div>
  </div>
  <%- include('../partials/footer') %>