<%- include('../partials/header') %>
<div class="section"></div>
<div class="row">
  <div id="users" class="col s5">
    <% posts.forEach(function(post) { %>
    <div class="black  collection-item">
      <div class="content">
      <span class="title white-text"><%= post.text %></span>
      <form action="/events/<%= post._id %>?_method=DELETE" method="POST" class="secondary-content">
        <button type="submit" class="waves-effect waves-teal btn-flat red-text">x</button>
        <a href="/events/<%= post._id %>/edit"> <em>Edit</em></a>
      </form>
    </div>
      <div class="section"></div>
      <% post.comments.forEach(function(comment) { %>
      <div class="collection-item white-text col s7 push-s1">
        <span class="black title"><%= comment.text %></span>
      </div>
      <br><hr><br>
      <% }) %>
      <form action="/events/<%= post._id %>/comment" method="POST" class="black white-text">
        <input type="text" name="text" class="black-text">
        <button class="waves-effect waves-teal btn-flat">Add comment</button>
      </form>
    </div>
    <div class="section"></div>
    <% }) %>
    <div class="card-action">
      <form action="/events" method="POST">
        <input type="text" name="text" class="black white-text">
        <button class="btn red white-text">Add post</button>
      </form>
    </div>
  </div>
  <%- include('../partials/footer') %>